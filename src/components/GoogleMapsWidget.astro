---
// GoogleMapsWidget - Embedded Google Maps with business location and rating

interface Props {
    showAddress?: boolean;
}

const { showAddress = true } = Astro.props;

// Business info
const business = {
    name: "Carolina Renew",
    address: "11734 Fernhurst Lane",
    city: "Charlotte",
    state: "NC",
    zip: "28277",
    phone: "(980) 408-8122",
    placeId: "ChIJNfzIvoSEshMRCEpzJWDsPn0", // Place ID from Google Maps URL
    mapsUrl:
        "https://www.google.com/maps/place/Carolina+Renew/@35.0444079,-80.8149538,17z",
    reviewsUrl:
        "https://www.google.com/maps/place/Carolina+Renew/@35.0444079,-80.8149538,17z/data=!3m1!4b1!4m6!3m5!1s0x2b92844be3c8fc35:0x7de3ec6025734a08!8m2!3d35.0444079!4d-80.8149538!16s%2Fg%2F11wqrltszk",
};
---

<section class="py-16 bg-gray-50">
    <div class="w-full px-4 sm:px-8 lg:px-12 xl:px-16">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Visit Our Location
            </h2>
            <p class="text-gray-600 max-w-2xl mx-auto">
                Serving Charlotte and surrounding areas in NC & SC since 2021
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
            <!-- Map Embed -->
            <div class="rounded-2xl overflow-hidden shadow-lg h-[400px]">
                <iframe
                    src={`https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3264.5!2d-80.8171425!3d35.0444079!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2b92844be3c8fc35%3A0x7de3ec6025734a08!2sCarolina%20Renew!5e0!3m2!1sen!2sus!4v1`}
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    title="Carolina Renew location on Google Maps"></iframe>
            </div>

            <!-- Business Info Card -->
            <div class="bg-white rounded-2xl shadow-lg p-8">
                <div class="flex items-center gap-4 mb-6">
                    <div
                        class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center"
                    >
                        <svg
                            class="w-8 h-8 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-900">
                            {business.name}
                        </h3>
                        <p class="text-gray-500">
                            Cabinet Refinishing & Painting
                        </p>
                    </div>
                </div>

                {
                    showAddress && (
                        <div class="space-y-4 mb-6">
                            <div class="flex items-start gap-3">
                                <svg
                                    class="w-5 h-5 text-gray-400 mt-0.5 shrink-0"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    />
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    />
                                </svg>
                                <div>
                                    <p class="text-gray-900 font-medium">
                                        {business.address}
                                    </p>
                                    <p class="text-gray-600">
                                        {business.city}, {business.state}{" "}
                                        {business.zip}
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-center gap-3">
                                <svg
                                    class="w-5 h-5 text-gray-400 shrink-0"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    />
                                </svg>
                                <a
                                    href="tel:+19804088122"
                                    class="text-blue-600 font-medium hover:text-blue-700"
                                >
                                    {business.phone}
                                </a>
                            </div>
                        </div>
                    )
                }

                <!-- Google Rating -->
                <a
                    href={business.reviewsUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition mb-6"
                >
                    <img
                        src="https://www.google.com/images/branding/product/1x/googleg_48dp.png"
                        alt="Google"
                        class="w-10 h-10"
                    />
                    <div class="flex-1">
                        <div class="flex items-center gap-1 mb-1">
                            <span class="text-yellow-500">★★★★★</span>
                            <span class="text-gray-900 font-bold">5.0</span>
                        </div>
                        <p class="text-sm text-gray-600">
                            See our Google Reviews
                        </p>
                    </div>
                    <svg
                        class="w-5 h-5 text-gray-400"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>

                <!-- Quick Stats -->
                <div class="grid grid-cols-3 gap-4 text-center">
                    <div>
                        <p class="text-2xl font-bold text-blue-600">400+</p>
                        <p class="text-xs text-gray-500">Projects</p>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-blue-600">
                            Since 2021
                        </p>
                        <p class="text-xs text-gray-500">Established</p>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-blue-600">5.0★</p>
                        <p class="text-xs text-gray-500">Rating</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
