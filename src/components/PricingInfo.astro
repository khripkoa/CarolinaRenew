---
// Pricing information component for service pages
interface Props {
    service?: string;
}

const { service = "Cabinet Refinishing" } = Astro.props;

// Sample pricing data - in production this would come from CMS
const pricingRanges = {
    "Cabinet Refinishing": {
        min: 2500,
        max: 6500,
        typical: "3,500 - 4,500",
        unit: "kitchen",
    },
    "Interior Painting": {
        min: 1500,
        max: 5000,
        typical: "2,000 - 3,500",
        unit: "room",
    },
    "Exterior Painting": {
        min: 3000,
        max: 8000,
        typical: "4,000 - 6,000",
        unit: "house",
    },
};

const pricing = pricingRanges[service] || pricingRanges["Cabinet Refinishing"];
---

<div
    class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-8 border border-blue-200 shadow-sm"
>
    <div class="flex items-start justify-between mb-4">
        <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">
                Investment Range
            </h3>
            <p class="text-gray-600">Transparent pricing, no surprises</p>
        </div>
        <div
            class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center"
        >
            <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
            </svg>
        </div>
    </div>

    <div class="bg-white rounded-xl p-6 mb-4">
        <div class="flex items-baseline gap-2 mb-2">
            <span class="text-4xl font-extrabold text-blue-600"
                >${pricing.typical}</span
            >
        </div>
        <p class="text-gray-600 text-sm">Most {pricing.unit}s in this range</p>
    </div>

    <div class="grid grid-cols-2 gap-4 mb-6">
        <div class="text-center p-4 bg-white/50 rounded-lg">
            <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">
                Starting at
            </p>
            <p class="text-xl font-bold text-gray-700">
                ${pricing.min.toLocaleString()}
            </p>
        </div>
        <div class="text-center p-4 bg-white/50 rounded-lg">
            <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">
                Up to
            </p>
            <p class="text-xl font-bold text-gray-700">
                ${pricing.max.toLocaleString()}
            </p>
        </div>
    </div>

    <div class="space-y-2 text-sm text-gray-600">
        <div class="flex items-center gap-2">
            <svg
                class="w-4 h-4 text-green-500 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
            </svg>
            <span>Free in-home consultation & quote</span>
        </div>
        <div class="flex items-center gap-2">
            <svg
                class="w-4 h-4 text-green-500 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
            </svg>
            <span>Financing options available</span>
        </div>
        <div class="flex items-center gap-2">
            <svg
                class="w-4 h-4 text-green-500 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
            </svg>
            <span>Price match guarantee</span>
        </div>
    </div>

    <div class="mt-6 pt-6 border-t border-blue-200">
        <p class="text-xs text-gray-500 italic">
            *Final price depends on project size, materials, and complexity. Get
            your exact quote today!
        </p>
    </div>
</div>
