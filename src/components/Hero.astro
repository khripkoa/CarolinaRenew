---
import { Image } from "astro:assets";

interface Props {
  title: string;
  subtitle: string;
  location: {
    city: string;
    zip?: string;
    neighborhood?: {
      name: string;
      zip?: string;
    };
  };
  bgImage?: string;
  category?: {
    name: string;
    image?: string;
  };
  service?: {
    name: string;
    image?: string;
  };
}

const {
  title,
  subtitle,
  location,
  bgImage = "/images/hero-kitchen.png",
} = Astro.props;
---

<section
  class="relative bg-gray-900 text-white overflow-hidden min-h-[60vh] md:min-h-[70vh] lg:min-h-[80vh] flex items-center"
>
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0" style="contain: layout;">
    <Image
      src={bgImage}
      alt="Beautiful kitchen renovation"
      class="w-full h-full object-cover opacity-30"
      width={1600}
      height={900}
      widths={[400, 800, 1200, 1600]}
      sizes="100vw"
      format="avif"
      quality={70}
      loading="eager"
      fetchpriority="high"
    />
    <!-- Gradient Overlay for Text Readability -->
    <div
      class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-900/80 to-gray-900/40"
    >
    </div>
  </div>

  <div
    class="relative z-10 w-full px-4 sm:px-8 lg:px-12 xl:px-16 py-8 md:py-12 lg:py-20 w-full"
  >
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-8 items-center">
      <!-- Left Column: Text Content (Span 7) -->
      <div class="lg:col-span-7 space-y-6 md:space-y-8">
        <!-- Trust Badge -->
        <div
          class="inline-flex items-center px-3 py-1.5 md:px-4 md:py-2 rounded-full bg-white/10 border border-white/20 backdrop-blur-md text-xs md:text-sm font-medium text-blue-100 shadow-lg"
        >
          <span class="flex items-center text-yellow-400 mr-2">
            <svg class="w-3 h-3 md:w-4 md:h-4 fill-current" viewBox="0 0 20 20"
              ><path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path></svg
            >
            <svg class="w-3 h-3 md:w-4 md:h-4 fill-current" viewBox="0 0 20 20"
              ><path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path></svg
            >
            <svg class="w-3 h-3 md:w-4 md:h-4 fill-current" viewBox="0 0 20 20"
              ><path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path></svg
            >
            <svg class="w-3 h-3 md:w-4 md:h-4 fill-current" viewBox="0 0 20 20"
              ><path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path></svg
            >
            <svg class="w-3 h-3 md:w-4 md:h-4 fill-current" viewBox="0 0 20 20"
              ><path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path></svg
            >
          </span>
          Highly Rated on Google in {
            location.neighborhood?.name || location.city
          }
        </div>

        <h1 class="hero-title">
          {title}
        </h1>

        <p class="text-base md:text-xl text-gray-200 max-w-2xl leading-relaxed">
          {subtitle}
        </p>

        <!-- Trust Badges -->
        <div class="flex flex-wrap items-center gap-4 pt-2 pb-2">
          <div
            class="flex items-center gap-2 px-3 py-1.5 bg-white/10 rounded-lg backdrop-blur-sm border border-white/20"
          >
            <svg
              class="w-4 h-4 text-blue-400"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"
              ></path>
            </svg>
            <span class="text-sm font-medium text-white"
              >400+ Happy Customers</span
            >
          </div>
          <div
            class="flex items-center gap-2 px-3 py-1.5 bg-white/10 rounded-lg backdrop-blur-sm border border-white/20"
          >
            <svg
              class="w-4 h-4 text-yellow-400"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path>
            </svg>
            <span class="text-sm font-medium text-white"
              >5/5 Average Rating</span
            >
          </div>
        </div>

        <!-- Urgency Element -->
        <div
          class="inline-flex items-center gap-3 px-4 py-2 bg-gradient-to-r from-red-600/20 to-orange-600/20 rounded-lg border border-red-500/30 backdrop-blur-sm"
          x-data="{ slots: 3 }"
        >
          <div class="relative flex h-3 w-3">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"
            ></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"
            ></span>
          </div>
          <span class="text-sm font-medium text-white">
            <span class="text-red-400 font-bold" x-text="slots">3</span> slots left
            this week in {location.neighborhood?.name || location.city}
          </span>
        </div>

        <div class="flex flex-wrap gap-6 pt-4">
          <div class="flex items-center gap-3">
            <div
              class="w-10 h-10 rounded-full bg-blue-600/20 flex items-center justify-center border border-blue-500/30"
            >
              <svg
                class="w-5 h-5 text-blue-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
              >
            </div>
            <span class="font-medium text-gray-100">On-Time Guarantee</span>
          </div>
        </div>
      </div>

      <!-- Right Column: Floating Form (Span 5) -->
      <div class="lg:col-span-5">
        <div
          class="bg-white rounded-2xl shadow-2xl overflow-hidden transform transition hover:scale-[1.01] duration-300"
        >
          <div
            class="bg-gradient-to-r from-orange-600 to-orange-500 p-6 text-center"
          >
            <p class="text-2xl font-bold text-white">Get Your Free Estimate</p>
            <p class="text-orange-100 text-sm mt-1">
              Limited time availability in {
                location.neighborhood?.name || location.city
              }
            </p>
          </div>

          <div
            class="p-8"
            x-data="{
            step: 1,
            service: 'Cabinet Refinishing',
            zip: '',
            name: '',
            phone: '',
            email: '',
            consent: false,
            gclid: '',
            yclid: '',
            utm_source: '',
            utm_medium: '',
            utm_campaign: '',
            utm_term: '',
            utm_content: '',
            ga_client_id: '',
            ym_client_id: '',
            errors: {},
            validateStep() {
              this.errors = {};
              if (this.step === 1 && !this.service) {
                this.errors.service = 'Please select a service';
                return false;
              }
              if (this.step === 2 && (!this.zip || this.zip.length < 5)) {
                this.errors.zip = 'Please enter a valid zip code';
                return false;
              }
              if (this.step === 3) {
                if (!this.name) this.errors.name = 'Name is required';
                if (!this.phone || this.phone.length < 10) this.errors.phone = 'Valid phone is required';
                if (!this.email || !this.email.includes('@')) this.errors.email = 'Valid email is required';
                if (!this.consent) this.errors.consent = 'You must agree to the terms';
                return !this.errors.name && !this.errors.phone && !this.errors.email && !this.errors.consent;
              }
              return true;
            },
            nextStep() {
              if (this.validateStep()) {
                if (this.step < 3) this.step++;
              }
            },
            prevStep() {
              if (this.step > 1) this.step--;
            },
            submitForm() {
              if (this.validateStep()) {
                const formData = new FormData();
                formData.append('form-name', 'contact');
                formData.append('service', this.service);
                formData.append('zip', this.zip);
                formData.append('name', this.name);
                formData.append('phone', this.phone);
                formData.append('email', this.email);
                
                // Tracking Params
                if (this.gclid) formData.append('gclid', this.gclid);
                if (this.yclid) formData.append('yclid', this.yclid);
                if (this.utm_source) formData.append('utm_source', this.utm_source);
                if (this.utm_medium) formData.append('utm_medium', this.utm_medium);
                if (this.utm_campaign) formData.append('utm_campaign', this.utm_campaign);
                if (this.utm_term) formData.append('utm_term', this.utm_term);
                if (this.utm_content) formData.append('utm_content', this.utm_content);
                if (this.ga_client_id) formData.append('ga_client_id', this.ga_client_id);
                if (this.ym_client_id) formData.append('ym_client_id', this.ym_client_id);
                
                // Submit to Netlify
                fetch('/', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                  body: new URLSearchParams(formData).toString()
                }).then(() => {
                  // Submit to Telegram API
                  fetch('/api/telegram-webhook', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                      service: this.service,
                      zip: this.zip,
                      name: this.name,
                      phone: this.phone,
                      email: this.email,
                      gclid: this.gclid,
                      yclid: this.yclid,
                      utm_source: this.utm_source,
                      utm_medium: this.utm_medium,
                      utm_campaign: this.utm_campaign,
                      utm_term: this.utm_term,
                      utm_content: this.utm_content,
                      ga_client_id: this.ga_client_id,
                      ym_client_id: this.ym_client_id
                    })
                  });
                  
                  alert('Thank you! Your quote request has been received. We will contact you shortly.');
                  this.step = 1;
                  this.service = 'Cabinet Refinishing';
                  this.zip = '';
                  this.name = '';
                  this.phone = '';
                  this.email = '';
                  this.consent = false;
                }).catch((error) => {
                  alert('Submission failed. Please try again.');
                });
              }
            }
          }"
            x-init={`
              zip = '${location.neighborhood?.zip || ""}';
              const urlParams = new URLSearchParams(window.location.search);
              gclid = urlParams.get('gclid') || '';
              yclid = urlParams.get('yclid') || '';
              
              // UTMs
              utm_source = urlParams.get('utm_source') || '';
              utm_medium = urlParams.get('utm_medium') || '';
              utm_campaign = urlParams.get('utm_campaign') || '';
              utm_term = urlParams.get('utm_term') || '';
              utm_content = urlParams.get('utm_content') || '';
              
              // Client IDs from Cookies
              const getCookie = (name) => {
                const value = '; ' + document.cookie;
                const parts = value.split('; ' + name + '=');
                if (parts.length === 2) return parts.pop().split(';').shift();
              };
              
              // GA Client ID (format: GA1.1.123456789.123456789) - we want the ID part
              const gaCookie = getCookie('_ga');
              if (gaCookie) {
                const parts = gaCookie.split('.');
                if (parts.length >= 4) {
                   ga_client_id = parts.slice(2).join('.');
                } else {
                   ga_client_id = gaCookie;
                }
              }
              
              // Yandex Client ID
              ym_client_id = getCookie('_ym_uid') || '';
            `}
          >
            <!-- Progress Indicator -->
            <div class="mb-6">
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium text-gray-600"
                  >Step <span x-text="step"></span> of 3</span
                >
                <span class="text-xs text-gray-500">
                  <span x-show="step === 1">Choose Service</span>
                  <span x-show="step === 2">Your Location</span>
                  <span x-show="step === 3">Contact Info</span>
                </span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div
                  class="bg-gradient-to-r from-orange-500 to-orange-600 h-2 rounded-full transition-all duration-300"
                  :style="`width: ${(step / 3) * 100}%`"
                >
                </div>
              </div>
            </div>

            <form
              name="contact"
              method="POST"
              data-netlify="true"
              @submit.prevent="submitForm"
              class="space-y-5"
            >
              <input type="hidden" name="form-name" value="contact" />
              <input
                type="hidden"
                name="subject"
                value="New Quote Request - Carolina Renew"
              />
              <input type="hidden" name="gclid" x-model="gclid" />
              <input type="hidden" name="yclid" x-model="yclid" />
              <input type="hidden" name="utm_source" x-model="utm_source" />
              <input type="hidden" name="utm_medium" x-model="utm_medium" />
              <input type="hidden" name="utm_campaign" x-model="utm_campaign" />
              <input type="hidden" name="utm_term" x-model="utm_term" />
              <input type="hidden" name="utm_content" x-model="utm_content" />
              <input type="hidden" name="ga_client_id" x-model="ga_client_id" />
              <input type="hidden" name="ym_client_id" x-model="ym_client_id" />
              <!-- Step 1: Service Selection -->
              <div
                x-show="step === 1"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 transform translate-x-4"
                x-transition:enter-end="opacity-100 transform translate-x-0"
              >
                <label
                  class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-3"
                  >What service do you need?</label
                >
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 sm:gap-3">
                  <button
                    type="button"
                    @click="service = 'Cabinet Refinishing'"
                    class="p-4 border-2 rounded-lg transition-all text-left"
                    :class="service === 'Cabinet Refinishing' ? 'border-orange-500 bg-orange-50' : 'border-gray-200 hover:border-orange-300'"
                  >
                    <div class="text-sm font-bold text-gray-900">
                      Cabinet Refinishing
                    </div>
                    <div class="text-xs text-gray-500 mt-1">Kitchen & Bath</div>
                  </button>
                  <button
                    type="button"
                    @click="service = 'Interior Painting'"
                    class="p-4 border-2 rounded-lg transition-all text-left"
                    :class="service === 'Interior Painting' ? 'border-orange-500 bg-orange-50' : 'border-gray-200 hover:border-orange-300'"
                  >
                    <div class="text-sm font-bold text-gray-900">
                      Interior Painting
                    </div>
                    <div class="text-xs text-gray-500 mt-1">
                      Walls & Ceilings
                    </div>
                  </button>
                  <button
                    type="button"
                    @click="service = 'Exterior Painting'"
                    class="p-4 border-2 rounded-lg transition-all text-left"
                    :class="service === 'Exterior Painting' ? 'border-orange-500 bg-orange-50' : 'border-gray-200 hover:border-orange-300'"
                  >
                    <div class="text-sm font-bold text-gray-900">
                      Exterior Painting
                    </div>
                    <div class="text-xs text-gray-500 mt-1">House & Trim</div>
                  </button>
                  <button
                    type="button"
                    @click="service = 'Custom Storage Solutions'"
                    class="p-4 border-2 rounded-lg transition-all text-left"
                    :class="service === 'Custom Storage Solutions' ? 'border-orange-500 bg-orange-50' : 'border-gray-200 hover:border-orange-300'"
                  >
                    <div class="text-sm font-bold text-gray-900">
                      Custom Storage Solutions
                    </div>
                    <div class="text-xs text-gray-500 mt-1">
                      Closets & Garage
                    </div>
                  </button>
                  <button
                    type="button"
                    @click="service = 'Other Service'"
                    class="p-4 border-2 rounded-lg transition-all text-left"
                    :class="service === 'Other Service' ? 'border-orange-500 bg-orange-50' : 'border-gray-200 hover:border-orange-300'"
                  >
                    <div class="text-sm font-bold text-gray-900">
                      Other Service
                    </div>
                    <div class="text-xs text-gray-500 mt-1">Tell us more</div>
                  </button>
                </div>
              </div>

              <!-- Step 2: Zip Code -->
              <div
                x-show="step === 2"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 transform translate-x-4"
                x-transition:enter-end="opacity-100 transform translate-x-0"
              >
                <label
                  class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1"
                  >What's your zip code?</label
                >
                <input
                  type="text"
                  x-model="zip"
                  maxlength="5"
                  pattern="[0-9]*"
                  inputmode="numeric"
                  class="w-full bg-gray-50 border-2 rounded-lg px-4 py-4 text-gray-900 text-lg font-medium focus:ring-2 focus:ring-orange-500 focus:border-orange-500 outline-none transition"
                  :class="errors.zip ? 'border-red-500' : 'border-gray-200'"
                  placeholder="28202"
                  @input="errors.zip = ''"
                />
                <p
                  x-show="errors.zip"
                  x-text="errors.zip"
                  class="text-red-500 text-xs mt-1"
                >
                </p>
                <p class="text-gray-500 text-xs mt-2">
                  We serve all of {location.neighborhood?.name || location.city}
                  and surrounding areas
                </p>
              </div>

              <!-- Step 3: Contact Info -->
              <div
                x-show="step === 3"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 transform translate-x-4"
                x-transition:enter-end="opacity-100 transform translate-x-0"
                class="space-y-4"
              >
                <div>
                  <label
                    class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1"
                    >Full Name</label
                  >
                  <input
                    type="text"
                    x-model="name"
                    class="w-full bg-gray-50 border-2 rounded-lg px-4 py-3 text-gray-900 focus:ring-2 focus:ring-orange-500 focus:border-orange-500 outline-none transition"
                    :class="errors.name ? 'border-red-500' : 'border-gray-200'"
                    placeholder="John Smith"
                    @input="errors.name = ''"
                  />
                  <p
                    x-show="errors.name"
                    x-text="errors.name"
                    class="text-red-500 text-xs mt-1"
                  >
                  </p>
                </div>
                <div>
                  <label
                    class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1"
                    >Phone Number</label
                  >
                  <input
                    type="tel"
                    x-model="phone"
                    inputmode="tel"
                    class="w-full bg-gray-50 border-2 rounded-lg px-4 py-3 text-gray-900 focus:ring-2 focus:ring-orange-500 focus:border-orange-500 outline-none transition"
                    :class="errors.phone ? 'border-red-500' : 'border-gray-200'"
                    placeholder="(980) 408-8122"
                    @input="errors.phone = ''"
                  />
                  <p
                    x-show="errors.phone"
                    x-text="errors.phone"
                    class="text-red-500 text-xs mt-1"
                  >
                  </p>
                </div>
                <div>
                  <label
                    class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1"
                    >Email Address</label
                  >
                  <input
                    type="email"
                    x-model="email"
                    inputmode="email"
                    class="w-full bg-gray-50 border-2 rounded-lg px-4 py-3 text-gray-900 focus:ring-2 focus:ring-orange-500 focus:border-orange-500 outline-none transition"
                    :class="errors.email ? 'border-red-500' : 'border-gray-200'"
                    placeholder="john@example.com"
                    @input="errors.email = ''"
                  />
                  <p
                    x-show="errors.email"
                    x-text="errors.email"
                    class="text-red-500 text-xs mt-1"
                  >
                  </p>
                </div>

                <div class="flex items-start gap-2 mt-4">
                  <div class="flex items-center h-5">
                    <input
                      id="consent"
                      name="consent"
