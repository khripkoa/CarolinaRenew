---
import LayoutService from "../layouts/LayoutService.astro";
import ProcessSteps from "../components/ProcessSteps.astro";

const title = "Our Process | Carolina Renew";
const description =
    "Discover our proven 5-step process for cabinet refinishing and painting. We ensure quality, durability, and minimal disruption to your home.";
---

<LayoutService title={title} description={description}>
    <div class="bg-blue-900 text-white py-20">
        <div class="w-full px-4 sm:px-8 lg:px-12 xl:px-16 text-center">
            <h1 class="page-title">Our Proven Process</h1>
            <p class="text-xl text-blue-100 max-w-3xl mx-auto">
                We've refined our workflow to deliver factory-quality results
                with minimal disruption to your daily life.
            </p>
        </div>
    </div>

    <section class="py-16 bg-gray-50">
        <div class="w-full px-4 sm:px-8 lg:px-12 xl:px-16">
            <ProcessSteps />

            <div
                class="mt-16 bg-white p-8 rounded-2xl shadow-sm border border-gray-100 text-center max-w-3xl mx-auto"
            >
                <h3 class="text-2xl font-bold text-gray-900 mb-4">
                    Ready to Start?
                </h3>
                <p class="text-gray-600 mb-8">
                    Our process is designed to be as stress-free as possible.
                    Contact us today to schedule your free consultation and see
                    how we can transform your home.
                </p>
                <a
                    href="tel:+19804088122"
                    class="inline-block bg-orange-600 text-white font-bold py-4 px-8 rounded-lg hover:bg-orange-700 transition shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
                >
                    Get Your Free Quote
                </a>
            </div>
        </div>
    </section>
</LayoutService>
