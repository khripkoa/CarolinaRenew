---
import Layout from '@/layouts/Layout.astro';

// --- ИМПОРТ ИЗОБРАЖЕНИЙ ---
import interiorBeforeImg from '@/assets/interior_painting_before.webp';
import interiorAfterImg from '@/assets/interior_painting_after.webp';
import kitchenBeforeImg from '@/assets/kitchen_remodel_before.webp';
import kitchenAfterImg from '@/assets/kitchen_remodel_after.webp';
import founderPhoto from '@/assets/founder.webp';

// --- ДАННЫЕ ДЛЯ СТРАНИЦЫ ---
const testimonials = [
  {
    quote: "The professionalism was top-notch! Our kitchen now looks like it's from a magazine. The entire team was clean, fast, and accommodated all of our wishes. Highly recommended!",
    name: "Anna V.",
    location: "Charlotte, NC",
  },
  {
    quote: "The best choice for our exterior painting project. The house looks brand new. The team at Carolina Renew are true masters of their craft. Thank you for the excellent work and attention to detail.",
    name: "Mark D.",
    location: "Matthews, NC",
  }
];

const projects = [
  {
    title: "Interior Painting Project",
    location: "Matthews, NC",
    beforeImage: interiorBeforeImg,
    afterImage: interiorAfterImg,
  },
  {
    title: "Kitchen Remodeling Project",
    location: "Concord, NC",
    beforeImage: kitchenBeforeImg,
    afterImage: kitchenAfterImg,
  }
];
---

<Layout
  title="Carolina Renew | Professional Painting & Remodeling in Charlotte, NC"
  description="Carolina Renew offers high-quality interior and exterior painting, kitchen remodeling, and bathroom renovation services in Charlotte, North Carolina."
  currentLocation="Charlotte"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-900 to-blue-700 text-white text-center py-20 md:py-32">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-4">Transform Your Home</h1>
      <p class="text-xl md:text-2xl text-blue-200 mb-8 max-w-3xl mx-auto">Quality painting and remodeling in Charlotte and surrounding areas since 2015.</p>
      <div class="flex justify-center gap-4">
        <a href="#contact-form" class="bg-yellow-500 text-blue-900 px-8 py-4 rounded-lg font-bold text-lg hover:bg-yellow-400 transition-transform hover:scale-105">
          Get My Free Estimate
        </a>
        <a href="/portfolio" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-blue-900 transition-colors">
          View Our Work
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section id="testimonials" class="py-20 bg-white">
      <div class="container mx-auto px-4">
          <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12">What Our Clients Say</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
              {testimonials.map(testimonial => (
                  <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
                      <p class="text-gray-600 mb-6 italic">"{testimonial.quote}"</p>
                      <p class="font-bold text-gray-900">{testimonial.name}</p>
                      <p class="text-sm text-gray-500">{testimonial.location}</p>
                  </div>
              ))}
          </div>
      </div>
  </section>

  <!-- Before/After -->
  <section id="transformation" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4 text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12">See the Transformation</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              {projects.map(project => (
                  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                      <div class="grid grid-cols-2">
                          <div class="relative">
                              <img src={project.beforeImage.src} alt={`${project.title} before`} class="w-full h-64 object-cover" loading="lazy" />
                              <div class="absolute top-2 left-2 bg-black/70 text-white px-3 py-1 rounded-full text-sm font-semibold">Before</div>
                          </div>
                          <div class="relative">
                              <img src={project.afterImage.src} alt={`${project.title} after`} class="w-full h-64 object-cover" loading="lazy" />
                              <div class="absolute top-2 left-2 bg-black/70 text-white px-3 py-1 rounded-full text-sm font-semibold">After</div>
                          </div>
                      </div>
                      <div class="p-6">
                          <h3 class="text-xl font-bold">{project.title}</h3>
                          <p class="text-gray-600">{project.location}</p>
                      </div>
                  </div>
              ))}
          </div>
      </div>
  </section>

  <!-- About Us Section -->
  <section id="about-us" class="py-20 bg-white">
      <div class="container mx-auto px-4">
          <div class="flex flex-col md:flex-row items-center gap-12 max-w-5xl mx-auto">
              <div class="md:w-1/3">
                  <img src={founderPhoto.src} alt="Stanislav Putilov, Founder of Carolina Renew" class="w-64 h-64 rounded-full mx-auto object-cover shadow-lg" />
              </div>
              <div class="md:w-2/3 text-center md:text-left">
                  <h2 class="text-3xl font-bold text-gray-900 mb-4">People You Can Trust</h2>
                  <p class="text-gray-600 mb-4">My name is Stanislav Putilov. Carolina Renew is more than a company; it's my personal commitment to quality. Founded in 2015, my mission is to provide Charlotte residents with the highest level of service. I treat every home like my own and take pride in our reputation.</p>
                  <p class="font-semibold text-gray-800">— Stanislav Putilov, Founder of Carolina Renew</p>
              </div>
          </div>
  </section>

</Layout>
