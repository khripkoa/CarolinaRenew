---
import Layout from '../layouts/Layout.astro';
import HeaderWithRegions from '../components/HeaderWithRegions.jsx';
import RegionsBlock from '../components/RegionsBlock.jsx';
import SimpleFooter from '../components/SimpleFooter.jsx';
---

<Layout 
  title="Professional Painting Services in Charlotte, NC | Carolina Renew"
  description="Transform your home with Carolina Renew's professional painting and remodeling services. Serving Charlotte, Gastonia, Concord, and surrounding areas. Free estimates!"
  keywords="painting contractors Charlotte NC, interior painting, exterior painting, house painters, home remodeling, Gastonia, Concord, Matthews"
>
  <HeaderWithRegions client:load />
  
  <!-- Hero Section -->
  <section class="hero-section relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700"></div>
    <div class="relative container mx-auto px-4 py-20 text-center text-white">
      <h1 class="hero-title text-4xl md:text-6xl font-bold mb-6 leading-tight">
        Transform Your Home with Professional Painting & Remodeling
      </h1>
      <p class="hero-subtitle text-xl md:text-2xl mb-8 opacity-90 max-w-3xl mx-auto">
        Serving Charlotte, NC and surrounding areas with quality craftsmanship and exceptional service since 2015
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="/contact" class="btn-primary px-8 py-4 text-lg font-semibold rounded-lg transition-all hover:scale-105">
          Get Free Estimate
        </a>
        <a href="/portfolio" class="text-white border-2 border-white px-8 py-4 rounded-lg hover:bg-white hover:text-blue-900 transition-all">
          View Our Work
        </a>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Our Professional Services
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          From interior painting to complete kitchen remodels, we bring your vision to life with quality craftsmanship
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center group">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 group-hover:bg-blue-200 transition-colors">
            <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Interior Painting</h3>
          <p class="text-gray-600">Professional interior painting with premium paints and expert color consultation</p>
        </div>

        <div class="text-center group">
          <div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 group-hover:bg-green-200 transition-colors">
            <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Exterior Painting</h3>
          <p class="text-gray-600">Weather-resistant exterior painting to protect and beautify your home</p>
        </div>

        <div class="text-center group">
          <div class="bg-yellow-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 group-hover:bg-yellow-200 transition-colors">
            <svg class="w-8 h-8 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Kitchen Remodeling</h3>
          <p class="text-gray-600">Complete kitchen transformations with modern design and functionality</p>
        </div>

        <div class="text-center group">
          <div class="bg-purple-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 group-hover:bg-purple-200 transition-colors">
            <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Bathroom Remodeling</h3>
          <p class="text-gray-600">Luxury bathroom renovations with attention to every detail</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Before & After Gallery - Using placeholder images for now -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          See the Transformation
        </h2>
        <p class="text-lg text-gray-600">
          Real results from our recent projects in Charlotte and surrounding areas
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Interior Painting Before/After -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="grid grid-cols-2">
            <div class="relative">
              <div class="w-full h-48 bg-gray-300 flex items-center justify-center">
                <span class="text-gray-600">Before Photo</span>
              </div>
              <div class="absolute top-2 left-2 bg-red-500 text-white px-2 py-1 rounded text-sm font-medium">
                Before
              </div>
            </div>
            <div class="relative">
              <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                <span class="text-gray-600">After Photo</span>
              </div>
              <div class="absolute top-2 left-2 bg-green-500 text-white px-2 py-1 rounded text-sm font-medium">
                After
              </div>
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-900 mb-1">Interior Painting Project</h3>
            <p class="text-gray-600 text-sm">Complete living room transformation in Matthews, NC</p>
          </div>
        </div>

        <!-- Kitchen Remodel Before/After -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="grid grid-cols-2">
            <div class="relative">
              <div class="w-full h-48 bg-gray-300 flex items-center justify-center">
                <span class="text-gray-600">Before Photo</span>
              </div>
              <div class="absolute top-2 left-2 bg-red-500 text-white px-2 py-1 rounded text-sm font-medium">
                Before
              </div>
            </div>
            <div class="relative">
              <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                <span class="text-gray-600">After Photo</span>
              </div>
              <div class="absolute top-2 left-2 bg-green-500 text-white px-2 py-1 rounded text-sm font-medium">
                After
              </div>
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-900 mb-1">Kitchen Remodeling Project</h3>
            <p class="text-gray-600 text-sm">Modern kitchen renovation in Concord, NC</p>
          </div>
        </div>
      </div>

      <div class="text-center mt-8">
        <a href="/portfolio" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
          View Full Portfolio
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Why Choose Carolina Renew?
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-blue-100 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Licensed & Insured</h3>
          <p class="text-gray-600">Fully licensed contractors with comprehensive insurance coverage for your peace of mind</p>
        </div>

        <div class="text-center">
          <div class="bg-green-100 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Quality Guarantee</h3>
          <p class="text-gray-600">We stand behind our work with a comprehensive warranty on all painting and remodeling projects</p>
        </div>

        <div class="text-center">
          <div class="bg-yellow-100 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Free Estimates</h3>
          <p class="text-gray-600">Get a detailed, no-obligation estimate for your project with transparent pricing</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Charlotte Service Area (Default) -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Proudly Serving Charlotte, NC
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Carolina Renew is your trusted local painting and remodeling contractor in Charlotte and surrounding areas
        </p>
      </div>

      <div class="bg-white rounded-lg shadow-lg p-8 max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Charlotte Metro Area</h3>
            <p class="text-gray-600 mb-6">
              As Charlotte's premier painting and remodeling company, we understand the unique needs of homes in the Queen City. 
              From historic neighborhoods to modern developments, we bring quality craftsmanship to every project.
            </p>
            
            <div class="grid grid-cols-2 gap-4 mb-6">
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Service Areas:</h4>
                <ul class="text-gray-600 space-y-1">
                  <li>• Charlotte</li>
                  <li>• Gastonia</li>
                  <li>• Concord</li>
                  <li>• Matthews</li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Also Serving:</h4>
                <ul class="text-gray-600 space-y-1">
                  <li>• Huntersville</li>
                  <li>• Rock Hill</li>
                  <li>• Mint Hill</li>
                  <li>• Pineville</li>
                </ul>
              </div>
            </div>
            
            <a href="/locations" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
              View All Service Areas →
            </a>
          </div>
          
          <div class="bg-blue-50 rounded-lg p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4">Get Your Free Estimate</h4>
            <p class="text-gray-600 mb-4">
              Ready to transform your Charlotte area home? Contact us today for a free, no-obligation estimate.
            </p>
            <div class="space-y-3">
              <a href="/contact" class="block w-full bg-blue-600 text-white text-center px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium">
                Get Free Estimate
              </a>
              <a href="tel:+1-704-XXX-XXXX" class="block w-full border-2 border-blue-600 text-blue-600 text-center px-6 py-3 rounded-lg hover:bg-blue-600 hover:text-white transition-colors font-medium">
                Call (704) XXX-XXXX
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-blue-900 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Ready to Transform Your Home?
      </h2>
      <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
        Contact Carolina Renew today for your free estimate and let us bring your vision to life
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-yellow-500 text-blue-900 px-8 py-4 rounded-lg font-semibold hover:bg-yellow-400 transition-colors">
          Get Free Estimate
        </a>
        <a href="tel:+1-704-XXX-XXXX" class="border-2 border-white text-white px-8 py-4 rounded-lg hover:bg-white hover:text-blue-900 transition-colors">
          Call (704) XXX-XXXX
        </a>
      </div>
    </div>
  </section>

  <SimpleFooter />
</Layout>
