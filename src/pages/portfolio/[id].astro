---
import LayoutService from "../../layouts/LayoutService.astro";
import { projects } from "../../data/portfolio";

export function getStaticPaths() {
    return projects.map((project) => ({
        params: { id: project.id },
        props: { project },
    }));
}

const { project } = Astro.props;

// Get related projects (same category, exclude current)
const relatedProjects = projects
    .filter(
        (p) => p.categorySlug === project.categorySlug && p.id !== project.id,
    )
    .slice(0, 2);

// If not enough related, get others
if (relatedProjects.length < 2) {
    const otherProjects = projects
        .filter((p) => p.id !== project.id && !relatedProjects.includes(p))
        .slice(0, 2 - relatedProjects.length);
    relatedProjects.push(...otherProjects);
}

const title = `${project.title} | Portfolio | Carolina Renew`;
const description = project.description;
---

<LayoutService title={title} description={description}>
    <!-- Breadcrumb -->
    <div class="bg-gray-50 py-4">
        <div class="w-full px-4 sm:px-8 lg:px-12 xl:px-16">
            <nav class="flex items-center text-sm text-gray-500">
                <a href="/" class="hover:text-blue-600">Home</a>
                <span class="mx-2">/</span>
                <a href="/portfolio/" class="hover:text-blue-600">Portfolio</a>
                <span class="mx-2">/</span>
                <span class="text-gray-900 font-medium">{project.title}</span>
            </nav>
        </div>
    </div>

    <!-- Hero Section -->
    <section class="py-12 bg-white">
        <div class="w-full px-4 sm:px-8 lg:px-12 xl:px-16">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Main Image -->
                <div class="space-y-4">
                    <div
                        class="relative rounded-2xl overflow-hidden shadow-2xl"
                    >
                        <img
                            src={project.afterImage}
                            alt={project.title}
                            class="w-full h-auto object-cover"
                            id="main-image"
                        />
                        <div class="absolute top-4 left-4">
                            <span
                                class="px-4 py-2 bg-orange-500 text-white text-sm font-bold rounded-full shadow-lg"
                            >
                                {project.category}
                            </span>
                        </div>
                    </div>

                    <!-- Thumbnail Gallery -->
                    {
                        project.gallery.length > 1 && (
                            <div class="flex gap-3 overflow-x-auto pb-2">
                                {project.gallery.map((img, idx) => (
                                    <button
                                        class="shrink-0 w-24 h-24 rounded-lg overflow-hidden border-2 border-transparent hover:border-orange-500 transition"
                                        onclick={`document.getElementById('main-image').src = '${img}'`}
                                    >
                                        <img
                                            src={img}
                                            alt={`Gallery ${idx + 1}`}
                                            class="w-full h-full object-cover"
                                        />
                                    </button>
                                ))}
                            </div>
                        )
                    }
                </div>

                <!-- Content -->
                <div>
                    <div
                        class="flex items-center gap-2 text-sm text-gray-500 mb-4"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        {project.location}
                        <span class="mx-2">•</span>
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                        {project.duration}
                    </div>

                    <h1
                        class="text-3xl md:text-4xl font-bold text-gray-900 mb-6"
                    >
                        {project.title}
                    </h1>

                    <p class="text-lg text-gray-600 mb-8 leading-relaxed">
                        {project.description}
                    </p>

                    <!-- Features -->
                    <div class="mb-8">
                        <h3 class="text-lg font-bold text-gray-900 mb-4">
                            What We Did
                        </h3>
                        <ul class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                            {
                                project.features.map((feature) => (
                                    <li class="flex items-center gap-2 text-gray-600">
                                        <svg
                                            class="w-5 h-5 text-green-500 shrink-0"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"
                                            />
                                        </svg>
                                        {feature}
                                    </li>
                                ))
                            }
                        </ul>
                    </div>

                    <!-- Testimonial -->
                    {
                        project.testimonial && (
                            <div class="bg-blue-50 rounded-xl p-6 mb-8">
                                <svg
                                    class="w-8 h-8 text-blue-300 mb-3"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
                                </svg>
                                <p class="text-gray-700 italic mb-3">
                                    "{project.testimonial.text}"
                                </p>
                                <p class="text-gray-500 font-medium">
                                    — {project.testimonial.author}
                                </p>
                            </div>
                        )
                    }

                    <!-- CTA -->
                    <div class="flex flex-col sm:flex-row gap-4">
                        <a
                            href="tel:+19804088122"
                            class="inline-flex items-center justify-center px-6 py-3 bg-orange-500 text-white font-bold rounded-lg hover:bg-orange-600 transition shadow-lg"
                        >
                            <svg
                                class="w-5 h-5 mr-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                ></path>
                            </svg>
                            Get a Free Quote
                        </a>
                        <a
                            href="/portfolio/"
                            class="inline-flex items-center justify-center px-6 py-3 border-2 border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition"
                        >
                            ← Back to Portfolio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Before/After Comparison -->
    <section class="py-16 bg-gray-100">
        <div class="w-full px-4 sm:px-8 lg:px-12 xl:px-16">
            <h2
                class="text-2xl md:text-3xl font-bold text-gray-900 text-center mb-4"
            >
                The Transformation
            </h2>
            <p class="text-gray-600 text-center mb-10 max-w-2xl mx-auto">
                Drag the slider to see the incredible before and after
                difference
            </p>

            <div class="max-w-4xl mx-auto">
                <!-- Interactive Slider -->
                <div
                    class="relative rounded-2xl overflow-hidden shadow-2xl border-4 border-white"
                    x-data="{ sliderPosition: 50 }"
                >
                    <div class="relative h-[400px] md:h-[500px]">
                        <!-- After Image (Full Width) -->
                        <img
                            src={project.afterImage}
                            alt="After"
                            class="absolute inset-0 w-full h-full object-cover"
                        />

                        <!-- Before Image (Clipped) -->
                        <div
                            class="absolute inset-0 overflow-hidden"
                            x-bind:style="`clip-path: inset(0 ${100 - sliderPosition}% 0 0);`"
                        >
                            <img
                                src={project.beforeImage}
                                alt="Before"
                                class="absolute inset-0 w-full h-full object-cover"
                            />
                        </div>

                        <!-- Labels -->
                        <div
                            class="absolute top-4 left-4 bg-black/70 text-white px-3 py-1 rounded text-sm font-bold"
                        >
                            BEFORE
                        </div>
                        <div
                            class="absolute top-4 right-4 bg-green-600 text-white px-3 py-1 rounded text-sm font-bold"
                        >
                            AFTER
                        </div>

                        <!-- Slider Control -->
                        <div
                            class="absolute inset-y-0 w-1 bg-white shadow-lg cursor-ew-resize group"
                            x-bind:style="`left: ${sliderPosition}%;`"
                            x-on:mousedown="(e) => {
                                const container = e.currentTarget.parentElement;
                                const rect = container.getBoundingClientRect();
                                const moveHandler = (moveEvent) => {
                                    const x = moveEvent.clientX - rect.left;
                                    sliderPosition = Math.max(0, Math.min(100, (x / rect.width) * 100));
                                };
                                const upHandler = () => {
                                    document.removeEventListener('mousemove', moveHandler);
                                    document.removeEventListener('mouseup', upHandler);
                                };
                                document.addEventListener('mousemove', moveHandler);
                                document.addEventListener('mouseup', upHandler);
                            }"
                            x-on:touchstart="(e) => {
                                const container = e.currentTarget.parentElement;
                                const rect = container.getBoundingClientRect();
                                const moveHandler = (moveEvent) => {
                                    const touch = moveEvent.touches[0];
                                    const x = touch.clientX - rect.left;
                                    sliderPosition = Math.max(0, Math.min(100, (x / rect.width) * 100));
                                };
                                const upHandler = () => {
                                    document.removeEventListener('touchmove', moveHandler);
                                    document.removeEventListener('touchend', upHandler);
                                };
                                document.addEventListener('touchmove', moveHandler);
                                document.addEventListener('touchend', upHandler);
                            }"
                        >
                            <div
                                class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-12 h-12 bg-white rounded-full flex items-center justify-center shadow-xl"
                            >
                                <svg
                                    class="w-6 h-6 text-gray-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"
                                    ></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>

                <p class="text-center text-sm text-gray-500 mt-4 italic">
                    ← Drag the slider to compare →
                </p>
            </div>
        </div>
    </section>

    <!-- Related Projects -->
    {
        relatedProjects.length > 0 && (
            <section class="py-16 bg-gray-50">
                <div class="w-full px-4 sm:px-8 lg:px-12 xl:px-16">
                    <h2 class="text-2xl font-bold text-gray-900 mb-8">
                        More Projects You'll Love
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        {relatedProjects.map((related) => (
                            <a
                                href={`/portfolio/${related.id}/`}
                                class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300"
                            >
                                <div class="relative h-48 overflow-hidden">
                                    <img
                                        src={related.afterImage}
                                        alt={related.title}
                                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                                        loading="lazy"
                                    />
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent" />
                                    <div class="absolute bottom-4 left-4 right-4">
                                        <span class="text-xs text-orange-400 font-bold">
                                            {related.category}
                                        </span>
                                        <h3 class="text-white font-bold">
                                            {related.title}
                                        </h3>
                                    </div>
                                </div>
                            </a>
                        ))}
                    </div>
                </div>
            </section>
        )
    }

    <!-- CTA Banner -->
    <section class="bg-blue-900 py-12">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-2xl font-bold text-white mb-4">
                Want Results Like This?
            </h2>
            <p class="text-blue-200 mb-6">
                Let's discuss your project. Free estimates, no obligation.
            </p>
            <a
                href="/contact/"
                class="inline-flex items-center justify-center px-8 py-4 bg-orange-500 text-white font-bold rounded-lg hover:bg-orange-600 transition shadow-lg"
            >
                Start Your Project Today
            </a>
        </div>
    </section>
</LayoutService>
