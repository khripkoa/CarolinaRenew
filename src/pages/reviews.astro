---
import LayoutService from "../layouts/LayoutService.astro";
import ReviewsComponent from "../components/Reviews.astro";
import VideoTestimonials from "../components/VideoTestimonials.astro";

const title = "Customer Reviews | Carolina Renew";
const description =
    "Read what our satisfied customers in Charlotte, NC have to say about their cabinet refinishing and painting experience with Carolina Renew.";
---

<LayoutService title={title} description={description}>
    <div class="bg-blue-900 text-white py-20">
        <div class="w-full px-4 sm:px-8 lg:px-12 xl:px-16 text-center">
            <h1 class="page-title">Customer Reviews</h1>
            <p class="text-xl text-blue-100 max-w-3xl mx-auto">
                We pride ourselves on our 5-star reputation. Here's what your
                neighbors are saying about us.
            </p>
        </div>
    </div>

    <VideoTestimonials />

    <section class="py-16 bg-white">
        <div class="w-full px-4 sm:px-8 lg:px-12 xl:px-16">
            <ReviewsComponent
                location={{
                    city: "Charlotte",
                    neighborhood: { name: "SouthPark" },
                }}
            />

            <div class="mt-16 text-center">
                <p class="text-gray-600 mb-6">
                    We value every piece of feedback we receive. It helps us
                    maintain the high standards we've set for ourselves.
                </p>
                <a
                    href="https://google.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center text-blue-600 font-bold hover:text-blue-800 transition"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-2.917 16.083c-2.258 0-4.083-1.825-4.083-4.083s1.825-4.083 4.083-4.083c1.103 0 2.024.402 2.735 1.067l-1.107 1.068c-.304-.292-.834-.632-1.628-.632-1.396 0-2.533 1.155-2.533 2.647 0 1.492 1.137 2.648 2.533 2.648 1.616 0 2.224-1.162 2.316-1.762h-2.316v-1.4h3.855c.036.204.064.408.064.677.001 2.332-1.563 3.922-3.919 3.922zm9.617-3.096h-1.924v1.924h-1.096v-1.924h-1.924v-1.096h1.924v-1.924h1.096v1.924h1.924v1.096z"
                        ></path></svg
                    >
                    Leave us a review on Google
                </a>
            </div>
        </div>
    </section>
</LayoutService>
