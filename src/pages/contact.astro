---
import LayoutService from "../layouts/LayoutService.astro";
import Hero from "../components/Hero.astro";

const title = "Contact Us | Carolina Renew";
const description =
    "Get in touch with Carolina Renew for a free estimate on cabinet refinishing, painting, or storage solutions in Charlotte, NC.";

// Mock location for Hero component
const contactLocation = {
    city: "Charlotte",
    state: "NC",
    county: "Mecklenburg",
};
---

<LayoutService title={title} description={description}>
    <!-- We reuse the Hero component because it has a great lead gen form -->
    <Hero
        location={contactLocation}
        title="Contact Us for a Free Quote"
        subtitle="Ready to transform your home? Fill out the form below or give us a call."
    />

    <section class="py-16 bg-white">
        <div class="w-full px-4 sm:px-8 lg:px-12 xl:px-16">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div>
                    <h2 class="text-3xl font-bold text-gray-900 mb-6">
                        Get In Touch
                    </h2>
                    <p class="text-gray-600 mb-8">
                        Whether you have a question about our process, need a
                        quote, or want to schedule a consultation, we're here to
                        help.
                    </p>

                    <div class="space-y-6">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg
                                    class="w-6 h-6 text-blue-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    ></path></svg
                                >
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-medium text-gray-900">
                                    Phone
                                </h3>
                                <p class="mt-1 text-gray-600">
                                    <a
                                        href="tel:+19804088122"
                                        class="hover:text-blue-600 transition"
                                        >(980) 408-8122</a
                                    >
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg
                                    class="w-6 h-6 text-blue-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path></svg
                                >
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-medium text-gray-900">
                                    Email
                                </h3>
                                <p class="mt-1 text-gray-600">
                                    <a
                                        href="mailto:info@carolinarenew.com"
                                        class="hover:text-blue-600 transition"
                                        >info@carolinarenew.com</a
                                    >
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg
                                    class="w-6 h-6 text-blue-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path></svg
                                >
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-medium text-gray-900">
                                    Hours
                                </h3>
                                <p class="mt-1 text-gray-600">
                                    Monday - Friday: 8:00 AM - 6:00 PM<br />
                                    Saturday: 9:00 AM - 5:00 PM<br />
                                    Sunday: Closed
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 p-8 rounded-2xl">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">
                        Service Area
                    </h3>
                    <p class="text-gray-600 mb-4">
                        We proudly serve Charlotte, NC and the surrounding
                        areas, including:
                    </p>
                    <ul class="grid grid-cols-2 gap-2 text-sm text-gray-600">
                        <li>
                            <a
                                href="/charlotte/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Charlotte</a
                            >
                        </li>
                        <li>
                            <a
                                href="/matthews/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Matthews</a
                            >
                        </li>
                        <li>
                            <a
                                href="/charlotte/mint-hill/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Mint Hill</a
                            >
                        </li>
                        <li>
                            <a
                                href="/pineville/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Pineville</a
                            >
                        </li>
                        <li>
                            <a
                                href="/huntersville/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Huntersville</a
                            >
                        </li>
                        <li>
                            <a
                                href="/cornelius/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Cornelius</a
                            >
                        </li>
                        <li>
                            <a
                                href="/davidson/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Davidson</a
                            >
                        </li>
                        <li>
                            <a
                                href="/mooresville/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Mooresville</a
                            >
                        </li>
                        <li>
                            <a
                                href="/concord/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Concord</a
                            >
                        </li>
                        <li>
                            <a
                                href="/kannapolis/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Kannapolis</a
                            >
                        </li>
                        <li>
                            <a
                                href="/harrisburg/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Harrisburg</a
                            >
                        </li>
                        <li>
                            <a
                                href="/fort-mill/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Fort Mill (SC)</a
                            >
                        </li>
                        <li>
                            <a
                                href="/rock-hill/"
                                class="hover:text-blue-600 hover:underline transition-colors"
                                >• Rock Hill (SC)</a
                            >
                        </li>
                    </ul>

                    <div class="mt-8 pt-8 border-t border-gray-200">
                        <h3 class="text-xl font-bold text-gray-900 mb-4">
                            Find Us
                        </h3>
                        <div
                            class="w-full h-64 bg-gray-200 rounded-xl overflow-hidden shadow-sm"
                        >
                            <iframe
                                width="100%"
                                height="100%"
                                frameborder="0"
                                scrolling="no"
                                marginheight="0"
                                marginwidth="0"
                                src="https://maps.google.com/maps?q=11734+Fernhurst+Ln,+Charlotte,+NC+28277&t=&z=15&ie=UTF8&iwloc=&output=embed"
                                title="Carolina Renew Location"
                            >
                            </iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</LayoutService>
