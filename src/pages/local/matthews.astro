---
import Layout from '../../layouts/Layout.astro';
import SimpleHeader from '../../components/SimpleHeader.jsx';
import SimpleFooter from '../../components/SimpleFooter.jsx';

// Ð˜Ð¼Ð¿Ð¾Ñ€Ñ‚ Ð¸Ð·Ð¾Ð±Ñ€Ð°Ð¶ÐµÐ½Ð¸Ð¹
import interiorAfter from '../../assets/interior_painting_after.png';
import exteriorAfter from '../../assets/exterior_painting_after.png';
import kitchenAfter from '../../assets/kitchen_remodel_after.png';
import bathroomAfter from '../../assets/bathroom_remodel_after.png';

const services = [
  {
    title: 'Interior Painting Matthews',
    description: 'Professional interior painting services for Matthews homes',
    image: interiorAfter,
    features: ['Wall painting', 'Ceiling painting', 'Trim work', 'Color consultation']
  },
  {
    title: 'Exterior Painting Matthews',
    description: 'Weather-resistant exterior painting for Matthews properties',
    image: exteriorAfter,
    features: ['Siding painting', 'Trim painting', 'Deck staining', 'Power washing']
  },
  {
    title: 'Kitchen Remodeling Matthews',
    description: 'Complete kitchen renovations in Matthews, NC',
    image: kitchenAfter,
    features: ['Cabinet refacing', 'Countertop installation', 'Backsplash', 'Flooring']
  },
  {
    title: 'Bathroom Remodeling Matthews',
    description: 'Full bathroom renovations for Matthews residents',
    image: bathroomAfter,
    features: ['Tile installation', 'Fixture replacement', 'Vanity installation', 'Waterproofing']
  }
];

const localInfo = {
  city: 'Matthews',
  state: 'NC',
  population: '32,684',
  founded: '1879',
  nickname: 'The Town of Matthews',
  description: 'Matthews is a charming small town in Mecklenburg County with a historic downtown area and growing residential neighborhoods.'
};

const nearbyAreas = [
  'Charlotte', 'Mint Hill', 'Pineville', 'Indian Trail', 'Stallings'
];
---

<Layout 
  title="Professional Painting & Remodeling Services in Matthews, NC | Carolina Renew"
  description="Expert painting and remodeling services in Matthews, NC. Interior painting, exterior painting, kitchen and bathroom remodeling. Licensed, insured, and locally trusted. Free estimates!"
  keywords="painting services Matthews NC, interior painting Matthews, exterior painting Matthews, kitchen remodeling Matthews, bathroom remodeling Matthews, home renovation Matthews, professional painters Matthews"
  canonicalUrl="https://carolinarenew.com/local/matthews"
>
  <SimpleHeader />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
          Professional Painting & Remodeling in 
          <span class="text-yellow-400">Matthews, NC</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-blue-100">
          Serving {localInfo.city} residents with quality craftsmanship and exceptional service. 
          Licensed, insured, and locally trusted for over 10 years.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="bg-yellow-500 hover:bg-yellow-600 text-blue-900 font-bold py-4 px-8 rounded-lg text-lg transition-colors">
            Get Free Matthews Estimate
          </button>
          <a href="/portfolio" class="border-2 border-white hover:bg-white hover:text-blue-900 font-bold py-4 px-8 rounded-lg text-lg transition-colors">
            View Our Matthews Work
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Local Info Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-4">Serving {localInfo.city}, {localInfo.state}</h2>
              <p class="text-gray-600 mb-4">{localInfo.description}</p>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="font-semibold text-gray-900">Population:</span>
                  <p class="text-gray-600">{localInfo.population}</p>
                </div>
                <div>
                  <span class="font-semibold text-gray-900">Founded:</span>
                  <p class="text-gray-600">{localInfo.founded}</p>
                </div>
              </div>
            </div>
            <div class="text-center">
              <div class="bg-blue-100 rounded-lg p-6">
                <svg class="w-16 h-16 text-blue-900 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <h3 class="text-xl font-bold text-gray-900">Local Service</h3>
                <p class="text-gray-600">Proudly serving Matthews and surrounding areas</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Our Matthews Services</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Comprehensive painting and remodeling services tailored for Matthews homeowners
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <img 
              src={service.image.src} 
              alt={service.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-2xl font-bold text-gray-900 mb-3">{service.title}</h3>
              <p class="text-gray-600 mb-4">{service.description}</p>
              <ul class="grid grid-cols-2 gap-2 text-sm text-gray-600">
                {service.features.map((feature) => (
                  <li class="flex items-center">
                    <svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us for Matthews -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Matthews Residents Choose Carolina Renew</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg p-6 shadow-sm text-center">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Local Matthews Knowledge</h3>
          <p class="text-gray-600">We understand Matthews' unique architectural styles and local preferences</p>
        </div>
        
        <div class="bg-white rounded-lg p-6 shadow-sm text-center">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Quick Response</h3>
          <p class="text-gray-600">Fast response times for Matthews residents - usually within 24 hours</p>
        </div>
        
        <div class="bg-white rounded-lg p-6 shadow-sm text-center">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Matthews References</h3>
          <p class="text-gray-600">Extensive portfolio of satisfied Matthews customers and local references</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Nearby Areas -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">We Also Serve Areas Near Matthews</h2>
        <p class="text-lg text-gray-600">
          In addition to Matthews, we provide services to these nearby communities
        </p>
      </div>
      
      <div class="flex flex-wrap justify-center gap-4">
        {nearbyAreas.map((area) => (
          <a 
            href={area === 'Charlotte' ? '/' : `/local/${area.toLowerCase().replace(' ', '-')}`}
            class="bg-white border-2 border-gray-200 hover:border-blue-900 rounded-lg px-6 py-3 text-gray-700 hover:text-blue-900 font-medium transition-colors"
          >
            {area}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-blue-900 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">Ready to Transform Your Matthews Home?</h2>
      <p class="text-xl mb-8 text-blue-100">
        Contact Carolina Renew today for your free estimate. Serving Matthews, NC with pride and professionalism.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <button class="bg-yellow-500 hover:bg-yellow-600 text-blue-900 font-bold py-4 px-8 rounded-lg text-lg transition-colors">
          Get Free Matthews Estimate
        </button>
        <a href="/contact" class="border-2 border-white hover:bg-white hover:text-blue-900 font-bold py-4 px-8 rounded-lg text-lg transition-colors">
          Contact Us Today
        </a>
      </div>
      
      <div class="mt-8 text-blue-100">
        <p class="mb-2">ðŸ“ž Call us: (704) 123-4567</p>
        <p>ðŸ“§ Email: info@carolinarenew.com</p>
      </div>
    </div>
  </section>

  <SimpleFooter />
</Layout>
