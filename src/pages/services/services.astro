---
import Layout from '@/layouts/Layout.astro';
import HeaderWithRegions from '@/components/HeaderWithRegions.jsx';
import RegionsBlock from '@/components/RegionsBlock.jsx';
import SimpleFooter from '@/components/SimpleFooter.jsx';

// Import optimized WebP images
import interiorPainting from '@/assets-optimized/interior_painting_after.webp';
import exteriorPainting from '@/assets-optimized/exterior_painting_after.webp';
import kitchenRemodel from '@/assets-optimized/kitchen_remodel_after.webp';
import bathroomRemodel from '@/assets-optimized/bathroom_remodel_after.webp';
---

<Layout 
  title="Professional Painting & Remodeling Services | Carolina Renew"
  description="Complete painting and remodeling services in Charlotte, NC. Interior painting, exterior painting, kitchen remodeling, bathroom renovation. Licensed & insured."
  keywords="painting services Charlotte NC, interior painting, exterior painting, kitchen remodeling, bathroom renovation, home improvement"
>
  <HeaderWithRegions client:load />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-900 to-blue-700 text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Professional Painting & Remodeling Services
      </h1>
      <p class="text-xl mb-8 max-w-3xl mx-auto opacity-90">
        Transform your home with our comprehensive range of painting and remodeling services. 
        Quality craftsmanship, premium materials, and exceptional customer service.
      </p>
      <a href="/contact" class="bg-yellow-500 text-blue-900 px-8 py-4 rounded-lg font-semibold hover:bg-yellow-400 transition-colors">
        Get Free Estimate
      </a>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Interior Painting -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <img 
            src={interiorPainting} 
            alt="Professional interior painting service"
            width="600"
            height="300"
            loading="lazy"
            class="w-full h-64 object-cover"
          />
          <div class="p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Interior Painting</h2>
            <p class="text-gray-600 mb-6">
              Transform your living spaces with our professional interior painting services. 
              We use premium paints and expert techniques to deliver flawless results that last.
            </p>
            
            <h3 class="text-lg font-semibold text-gray-900 mb-3">What's Included:</h3>
            <ul class="text-gray-600 mb-6 space-y-2">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Color consultation and design advice
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Surface preparation and priming
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Premium paint application
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Complete cleanup and protection
              </li>
            </ul>
            
            <a href="/services/interior-painting" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
              Learn More About Interior Painting →
            </a>
          </div>
        </div>

        <!-- Exterior Painting -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <img 
            src={exteriorPainting} 
            alt="Professional exterior painting service"
            width="600"
            height="300"
            loading="lazy"
            class="w-full h-64 object-cover"
          />
          <div class="p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Exterior Painting</h2>
            <p class="text-gray-600 mb-6">
              Protect and beautify your home's exterior with our weather-resistant painting solutions. 
              We use high-quality paints designed to withstand North Carolina's climate.
            </p>
            
            <h3 class="text-lg font-semibold text-gray-900 mb-3">What's Included:</h3>
            <ul class="text-gray-600 mb-6 space-y-2">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Pressure washing and surface prep
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Caulking and minor repairs
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Weather-resistant paint systems
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Landscaping protection
              </li>
            </ul>
            
            <a href="/services/exterior-painting" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
              Learn More About Exterior Painting →
            </a>
          </div>
        </div>

        <!-- Kitchen Remodeling -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <img 
            src={kitchenRemodel} 
            alt="Professional kitchen remodeling service"
            width="600"
            height="300"
            loading="lazy"
            class="w-full h-64 object-cover"
          />
          <div class="p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Kitchen Remodeling</h2>
            <p class="text-gray-600 mb-6">
              Create the kitchen of your dreams with our comprehensive remodeling services. 
              From design to completion, we handle every aspect of your kitchen transformation.
            </p>
            
            <h3 class="text-lg font-semibold text-gray-900 mb-3">What's Included:</h3>
            <ul class="text-gray-600 mb-6 space-y-2">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
