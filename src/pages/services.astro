import exteriorBefore from '@/assets/exterior_painting_before.webp';
import exteriorAfter from '@/assets/exterior_painting_after.webp';
import kitchenBefore from '@/assets/kitchen_remodel_before.webp';
import kitchenAfter from '@/assets/kitchen_remodel_after.webp';
import bathroomBefore from '@/assets/kitchen_remodel_before.webp'; // Используем картинку кухни
import bathroomAfter from '@/assets/bathroom_remodel_after.webp';

const services = [
  {
    title: 'Interior Painting',
    description: 'Professional painting of walls, ceilings, trim, and furniture indoors',
    features: [
      'Surface preparation',
      'Priming and spackling',
      'Wall and ceiling painting',
      'Decorative finishes',
      'Cabinet and door painting',
      'Protective coatings'
    ],
    beforeImage: interiorBefore,
    afterImage: interiorAfter,
    price: 'from $2-5 per sq ft',
    slug: 'interior-painting'
  },
  {
    title: 'Exterior Painting',
    description: 'Protect and beautify your home\'s exterior with professional painting',
    features: [
      'Power washing',
      'Surface preparation',
      'Weather-resistant paints',
      'Trim and siding painting',
      'Deck and fence staining',
      'Protective sealants'
    ],
    beforeImage: exteriorBefore,
    afterImage: exteriorAfter,
    price: 'from $3-6 per sq ft',
    slug: 'exterior-painting'
  },
  {
    title: 'Kitchen Remodeling',
    description: 'Complete kitchen transformation with modern design and functionality',
    features: [
      'Cabinet refacing/replacement',
      'Countertop installation',
      'Backsplash design',
      'Flooring installation',
      'Lighting upgrades',
      'Plumbing updates'
    ],
    beforeImage: kitchenBefore,
    afterImage: kitchenAfter,
    price: 'from $15,000-50,000',
    slug: 'kitchen-remodeling'
  },
  {
    title: 'Bathroom Remodeling',
    description: 'Full-service bathroom renovation and waterproofing',
    features: [
      'Tile installation',
      'Fixture replacement',
      'Vanity installation',
      'Shower/tub renovation',
      'Waterproofing',
      'Ventilation upgrades'
    ],
    beforeImage: bathroomBefore,
    afterImage: bathroomAfter,
    price: 'from $8,000-25,000',
    slug: 'bathroom-remodeling'
