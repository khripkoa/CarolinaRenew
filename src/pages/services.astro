];
const serviceAreas = [
  'Charlotte, NC', 'Gastonia, NC', 'Concord, NC', 'Matthews, NC',
  'Huntersville, NC', 'Rock Hill, SC', 'Cornelius, NC', 'Davidson, NC'
];
---

<Layout
  title="Professional Painting & Remodeling Services | Carolina Renew"
  description="Comprehensive painting and remodeling services in Charlotte, NC. Interior painting, exterior painting, kitchen remodeling, bathroom remodeling. Licensed, insured, and trusted."
  keywords="painting services, interior painting, exterior painting, kitchen remodeling, bathroom remodeling, home renovation, Charlotte NC services, professional contractors"
  canonicalUrl="https://carolinarenew.com/services"
>
  <SimpleHeader />

  <section class="relative bg-gradient-to-r from-blue-900 to-blue-700 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Our Services
        </h1>
        <p class="text-xl text-blue-100 max-w-3xl mx-auto">
          From interior and exterior painting to complete kitchen and bathroom remodels,
          we provide comprehensive home improvement solutions with exceptional quality and service.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12">
        {services.map((service) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="grid grid-cols-2">
              <div class="relative">
                <img
                  src={service.beforeImage.src}
                  alt={`${service.title} before`}
                  class="w-full h-48 object-cover"
                />
                <div class="absolute bottom-2 left-2 bg-black bg-opacity-70 text-white px-2 py-1 rounded text-sm">
                  Before
                </div>
              </div>
              <div class="relative">
                <img
                  src={service.afterImage.src}
                  alt={`${service.title} after`}
                  class="w-full h-48 object-cover"
                />
                <div class="absolute bottom-2 left-2 bg-black bg-opacity-70 text-white px-2 py-1 rounded text-sm">
                  After
                </div>
              </div>
            </div>

            <div class="p-6">
              <h3 class="text-2xl font-bold text-gray-900 mb-3">{service.title}</h3>
              <p class="text-gray-600 mb-4">{service.description}</p>

              <div class="mb-4">
                <h4 class="font-semibold text-gray-900 mb-2">What's Included:</h4>
                <ul class="grid grid-cols-2 gap-1 text-sm text-gray-600">
                  {service.features.map((feature) => (
                    <li class="flex items-center">
                      <svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>

              <div class="flex items-center justify-between">
                <div class="text-lg font-bold text-blue-900">{service.price}</div>
                <a
                  href={`/services/${service.slug}`}
                  class="bg-blue-900 hover:bg-blue-800 text-white px-4 py-2 rounded font-medium transition-colors"
                >
                  Learn More
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Service Areas</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We proudly serve the Charlotte metro area and surrounding communities
        </p>
      </div>

      <div class="grid md:grid-cols-4 gap-4">
        {serviceAreas.map((area) => (
          <div class="bg-white rounded-lg p-4 text-center shadow-sm">
            <svg class="w-6 h-6 text-blue-900 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
