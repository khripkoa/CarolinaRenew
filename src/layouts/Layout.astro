      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: "Carolina Renew",
        url: "https://carolinarenew.com",
        potentialAction: {
          "@type": "SearchAction",
          target:
            "https://carolinarenew.com/service-areas/?q={search_term_string}",
